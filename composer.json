{
    "name": "edalzell/anvil",
    "description": "Control your Laravel Forge site from Statamic's control panel",
    "type": "statamic-addon",
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "pixelfear/composer-dist-plugin": "^0.1.2",
        "statamic/cms": "^3.0",
        "themsaid/forge-sdk": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Edalzell\\Anvil\\": "src"
        }
    },
    "extra": {
        "download-dist": {
            "url": "https://github.com/edalzell/statamic-anvil/releases/download/{$version}/dist.tar.gz",
            "path": "dist"
        },
        "laravel": {
            "providers": [
                "Edalzell\\Anvil\\ServiceProvider"
            ]
        },
        "statamic": {
            "name": "Anvil",
            "description": "Forge addon"
        }
    }
}
